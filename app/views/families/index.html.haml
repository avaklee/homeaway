    / WARNING: Respond.js doesn't work if you view the page via file://
    /[if lt IE 9]
      <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>

.wrapper
  .header
    .header__left
      HomeAway
    .header__right
      .header__right__destination
        .dropdown
          %button#dropdownMenu1.btn.btn-default.dropdown-toggle{"aria-expanded" => "true", "aria-haspopup" => "true", "data-toggle" => "dropdown", type: "button"}
            Destination
            %span.caret
          %ul.dropdown-menu{"aria-labelledby" => "dropdownMenu1"}
            %li
              %a{href: "#"} Laos
            %li
              %a{href: "#"} Nepal
      .header__right__inspire
        .dropdown
          %button#dropdownMenu1.btn.btn-default.dropdown-toggle{"aria-expanded" => "true", "aria-haspopup" => "true", "data-toggle" => "dropdown", type: "button"}
            Inspire me!
      .header__right__signup
        .dropdown
          %button#dropdownMenu1.btn.btn-default.dropdown-toggle{"aria-expanded" => "true", "aria-haspopup" => "true", "data-toggle" => "dropdown", type: "button"}
            Sign up
            %span.caret
          %ul.dropdown-menu{"aria-labelledby" => "dropdownMenu1"}
            %li
              %a{href: "#"} guest
            %li
              %a{href: "#"} host
      .header__right__login
        .dropdown
          %button#dropdownMenu1.btn.btn-default.dropdown-toggle{"aria-expanded" => "true", "aria-haspopup" => "true", "data-toggle" => "dropdown", type: "button"}
            Login
            %span.caret
          %ul.dropdown-menu{"aria-labelledby" => "dropdownMenu1"}
            %li
              %a{href: "#"} guest
            %li
              %a{href: "#"} host
      .header__right__language
        .dropdown
          %button#dropdownMenu1.btn.btn-default.dropdown-toggle{"aria-expanded" => "true", "aria-haspopup" => "true", "data-toggle" => "dropdown", type: "button"}
            Language
            %span.caret
          %ul.dropdown-menu{"aria-labelledby" => "dropdownMenu1"}
            %li
              %a{href: "#"} English
            %li
              %a{href: "#"} Japanese
            %li
              %a{href: "#"} Chinese
      .header__right__becomehost
        Become Host
  .main
    %img{src: "http://www.resortcollection.com/wp-content/themes/resortcollection/property-images/summit/summit-beach-resort-panama-city-beach-fl-beach-01.jpg"}
      .main__initial-form
        =form_tag('/families', method: :search) do
          %textarea{cols: "30", name: "text", placeholder: "  Where is your next destination?", rows: "2"}
          .main__initial-form__checkin
            #datepicker.input-daterange.input-group
              %input.input-sm.form-control{:name => "start", :type => "text"}/
              %span.input-group-addon to
              %input.input-sm.form-control{:name => "end", :type => "text"}/
          .main__initial-form__checkout
            check-out
          %input{type: "submit", value: "Submit"}

